@page "/"
@inject GamesClient Client

<PageTitle>Game Catalog</PageTitle>

<h1>Game Store</h1>

<div class="mt-2 mb-2">
    <a class="btn btn-primary" role="button" href="/edit-game">New Game</a>
</div>

@if(games is null)
{
    <p><em>Loading</em>Not Games Found</p>
}
else{
    <table class="table table-striped-columns table-bordered table-hover">
        <thead class="table-dark">
            <th>ID</th>
            <th>Name</th>
            <th>Genre</th>
            <th class="text-end">Price</th>
            <th>Release Date</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var game in games)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.Genre</td>
                    <td class="text-end">@game.Price.ToString("C2")</td>
                    <td>@game.ReleaseDate</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary me-2" role="button" href="@GameUrl(game.Id)">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <button  class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(game)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                        <DeleteGame Game="@game"/>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    // Null when component is render
    private GameSummary[]? games;

    // Init the game array
    protected override void OnInitialized()
    {
        base.OnInitialized();

        games = Client.GetGames();
    }

    private static string GameUrl(int id) => $"/edit-game/{id}";

    private string GetDeleteModalId(GameSummary game)
    {
        return $"#{DeleteGame.GetModalId(game)}";
    }
}